<resources>

    <style name="Widget.Button.IconButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:minWidth">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="rippleColor">?colorOnPrimary</item>
    </style>

    <style name="Widget.MenuButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="fabSize">normal</item>
        <item name="backgroundTint">?colorSurface</item>
        <item name="tint">?colorOnSurface</item>
        <item name="rippleColor">?colorPrimary</item>
        <item name="elevation">4dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="Widget.MoonPhase" parent="TextAppearance.Headline3">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Widget.CurrentDate" parent="TextAppearance.Headline6">
        <item name="fontFamily">@font/lato</item>
    </style>

    <style name="Icon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

</resources>
